
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#fff"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/paw"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Enter Type e.g Dog, Cat"
        android:background="@drawable/back"
        android:id="@+id/type"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Enter Condition"
        android:background="@drawable/back"
        android:id="@+id/condition"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/type"
        android:layout_alignStart="@+id/type" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Location"
        android:id="@+id/location"
        android:layout_marginTop="30dp"
        android:background="@drawable/back"
        android:layout_below="@+id/condition"
        android:layout_alignStart="@+id/condition"
        android:layout_alignEnd="@+id/imageView2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/location_icon"
        android:id="@+id/button"
        android:layout_alignEnd="@+id/condition"
        android:layout_toEndOf="@+id/location"
        android:layout_alignTop="@+id/location"
        android:layout_alignBottom="@+id/location" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:hint="More Informations"
        android:id="@+id/textView"
        android:background="@drawable/back"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/location"
        android:layout_alignStart="@+id/location" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Rescue"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />


</RelativeLayout>